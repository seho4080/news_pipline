# Producer 환경 변수 설정

# Kafka 설정
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=news-raw

# RSS 수집 설정  
RSS_FETCH_INTERVAL=300  # 5분 간격
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=producer.log

# 수집할 카테고리 (쉼표로 구분)
CATEGORIES=최신,정치,경제,사회,세계,문화,스포츠

# User-Agent 설정
USER_AGENT=Mozilla/5.0 (compatible; NewsBot/1.0)